@{
    ViewData["Title"] = "Shopping Cart";
}
@{
    Layout = "_UserLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .cart-container {
            max-width: 900px;
            margin: 50px auto;
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        h3 {
            text-align: center;
            margin-bottom: 20px;
        }

        .cart-table thead {
            background-color: #007bff;
            color: white;
        }

        .cart-table img {
            width: 70px;
            border-radius: 5px;
        }

        .quantity-control {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 5px;
        }

            .quantity-control button {
                border: none;
                background: #007bff;
                color: white;
                padding: 5px 10px;
                border-radius: 5px;
                cursor: pointer;
            }

                .quantity-control button:hover {
                    background: #0056b3;
                }

        .btn-remove {
            background:red;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn-remove:hover {
                background: darkred;
            }

        .total-price {
            text-align: right;
            font-size: 20px;
            font-weight: bold;
            margin-top: 10px;
        }

        .checkout-btn {
            display: block;
            width: 100%;
            margin-top: 15px;
            padding: 10px;
            background: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            text-align: center;
            font-size: 18px;
        }

            .checkout-btn:hover {
                background: #218838;
            }
    </style>
</head>
<body>

    <div class="cart-container">
        <h3>🛒 Your Shopping Cart</h3>
        <table class="table table-bordered cart-table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody id="cartItems"></tbody>
        </table>

        <div class="total-price">Total Price: <span id="totalPrice">$0.00</span></div>

        <button class="checkout-btn" id="checkoutBtn">Proceed to Checkout</button>
    </div>

    <script>
        $(document).ready(function () {
            loadCart();

            function loadCart() {
                var cart = localStorage.getItem("cart");
                var cartTable = $("#cartItems");
                cartTable.empty();
                var totalPrice = 0;

                if (cart) {
                    cart = JSON.parse(cart);

                    if (cart.length === 0) {
                        cartTable.append("<tr><td colspan='6' class='text-center'>No items in cart</td></tr>");
                        $("#totalPrice").text("$0.00");
                        return;
                    }

                    cart.forEach(function (item, index) {
                        var itemTotal = item.price * item.quantity;
                        totalPrice += itemTotal;

                        var row = "<tr>" +
                            "<td><img src='" + item.image + "'/></td>" +
                            "<td>" + item.name + "</td>" +
                            "<td>$" + item.price.toFixed(2) + "</td>" +
                            "<td class='quantity-control'>" +
                            "<button class='btn-decrease' data-index='" + index + "'>-</button>" +
                            "<span>" + item.quantity + "</span>" +
                            "<button class='btn-increase' data-index='" + index + "'>+</button>" +
                            "</td>" +
                            "<td>$" + itemTotal.toFixed(2) + "</td>" +
                            "<td><button class='btn-remove' data-index='" + index + "'>X</button></td>" +
                            "</tr>";

                        cartTable.append(row);
                    });

                    $("#totalPrice").text("$" + totalPrice.toFixed(2));
                } else {
                    cartTable.append("<tr><td colspan='6' class='text-center'>No items in cart</td></tr>");
                }
            }

            $(document).on("click", ".btn-increase", function () {
                var index = $(this).data("index");
                var cart = JSON.parse(localStorage.getItem("cart"));

                cart[index].quantity++;
                localStorage.setItem("cart", JSON.stringify(cart));
                loadCart();
            });

            $(document).on("click", ".btn-decrease", function () {
                var index = $(this).data("index");
                var cart = JSON.parse(localStorage.getItem("cart"));

                if (cart[index].quantity > 1) {
                    cart[index].quantity--;
                } else {
                    cart.splice(index, 1);
                }

                localStorage.setItem("cart", JSON.stringify(cart));
                loadCart();
            });

            $(document).on("click", ".btn-remove", function () {
                var index = $(this).data("index");
                var cart = JSON.parse(localStorage.getItem("cart"));

                cart.splice(index, 1);
                localStorage.setItem("cart", JSON.stringify(cart));
                loadCart();
            });

            $("#checkoutBtn").click(function () {
                if (localStorage.getItem("cart") && JSON.parse(localStorage.getItem("cart")).length > 0) {
                    alert("Proceeding to checkout...");
                    localStorage.removeItem("cart");
                    loadCart();
                } else {
                    alert("Your cart is empty!");
                }
            });
        });
    </script>

</body>
</html>
