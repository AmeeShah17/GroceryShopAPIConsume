@model IEnumerable<GroceryShopAPIConsume.Models.OrderModel>

<h3 style="margin-left:270px">User Table</h3>
<a asp-controller="Customer" asp-action="CustomerAddForm">
    <button style="margin-left:270px;margin-bottom:10px;" class="btn btn-primary">Add Data</button>
</a>

<!-- Scrollable Table Container -->
<div class="table-responsive" style="margin-left:270px; overflow-x: auto; max-width: calc(100vw - 280px);">
    <table class="table table-hover table-bordered" style="min-width: 1200px;">
        <thead>
            <tr>
                <th scope="col">Order ID</th>
                <th scope="col">OrderDate</th>
                <th scope="col">Customer ID</th>
                <th scope="col">Customer Name</th>
                <th scope="col">Discount</th>
                <th scope="col">Total Amount</th>
                <th scope="col">Shipping Address</th>
                <th scope="col">PaymentMode</th>
                <th scope="col">Created</th>
                <th scope="col">Modified</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var items in Model)
            {
                <tr>
                    <td>@items.OrderID</td>
                    <td>@items.OrderDate</td>
                    <td>@items.CustomerID</td>
                    <td>@items.CustomerName</td>
                    <td>@items.Discount</td>
                    <td>@items.TotalAmount</td>
                    <td>@items.ShippingAddress</td>
                    <td>@items.PaymentMode</td>
                    <td>@items.Created</td>
                    <td>@items.Modified</td>

                    <td>
                        <button class="btn btn-success"><i class="bi bi-pencil"></i></button>
                    </td>
                    <td>
                        <a href="@Url.Action("Delete","Order",new {OrderID=items.OrderID})">
                            <button class="btn btn-danger"><i class="bi bi-trash"></i></button>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
