@model IEnumerable<GroceryShopAPIConsume.Models.BillModel>


<h3 style="margin-left:270px">Category Table</h3>
<a asp-controller="Customer" asp-action="CustomerAddForm">
    <button style="margin-left:270px;margin-bottom:10px;" class="btn btn-primary">Add Data</button>
</a>
<table class="table table-hover table-bordered table-responsive" style="width:80%;margin-left:270px">
    <thead>
        <tr>
            <th scope="col">Bill ID</th>
            <th scope="col">Bill Number</th>
            <th scope="col">Order ID</th>
            <th scope="col">Order Date</th>
            <th scope="col">Customer ID</th>
            <th scope="col">Customer Name</th>
            <th scope="col">Total Amount</th>
            <th scope="col">Discount</th>
            <th scope="col">Net Amount</th>
            <th scope="col">Created</th>
            <th scope="col">Modified</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var items in Model)
        {
            <tr>
                <td>@items.BillID</td>
                <td>@items.BillNumber</td>
                <td>@items.OrderID</td>
                <td>@items.OrderDate</td>
                <td>@items.CustomerID</td>
                <td>@items.CustomerName</td>
                <td>@items.TotalAmount</td>
                <td>@items.Discount</td>
                <td>@items.NetAmount</td>
                <td>@items.Created</td>
                <td>@items.Modified</td>

                <td>
                    @* <a href="@Url.Action("Edit","Customer",new {CustomerID=items.CustomerID})"> *@
                    <button class="btn btn-success"><i class="bi bi-pencil"></i></button>
                    @* </a> *@
                </td>
                <td>
                    <a href="@Url.Action("Delete","Bill",new {BillID=items.BillID})">
                        <button class="btn btn-danger"><i class="bi bi-trash"></i></button>
                    </a>
                </td>
            </tr>
        }
        <span class="text-danger">@TempData["ErrorMessage"]</span>

    </tbody>
</table>
<!-- End Table with stripped rows -->
