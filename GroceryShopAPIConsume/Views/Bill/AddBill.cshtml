@model GroceryShopAPIConsume.Models.BillModel


<head>
       <style>
        body {
            background-color: #f8f9fa;
        }

        .form-container {
            margin-top:30px;
            margin-left:180px;
            margin-bottom:30px;
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .form-container h5 {
                background: #007bff;
                color: white;
                padding: 10px;
                border-radius: 5px;
                text-align: center;
                margin-bottom: 20px;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h5>Bill Form</h5>
            <form method="post" asp-action="Save" asp-controller="Bill">
                <input type="hidden" class="form-control" asp-for="BillID">

                <div class="mb-3">
                    <label class="form-label">Bill Number</label>
                    <input type="text" class="form-control" asp-for="BillNumber">
                </div>

                <div class="mb-3">
                    <label class="form-label">Order ID</label>
                    <select asp-for="OrderID" class="form-select">
                        <option selected>Open this select menu</option>
                        @foreach (var order in ViewBag.orderList)
                        {
                            <option value="@order.OrderID">@order.OrderInfo</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Customer ID</label>
                    <select asp-for="CustomerID" class="form-select">
                        <option selected>Open this select menu</option>
                        @foreach (var customer in ViewBag.customerList)
                        {
                            <option value="@customer.CustomerID">@customer.CustomerName</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Total Amount</label>
                    <input type="text" class="form-control" asp-for="TotalAmount">
                </div>

                <div class="mb-3">
                    <label class="form-label">Discount</label>
                    <input type="text" class="form-control" asp-for="Discount">
                </div>

                <div class="mb-3">
                    <label class="form-label">Net Amount</label>
                    <input type="text" class="form-control" asp-for="NetAmount">
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary w-50">Submit</button>
                </div>
            </form>
        </div>
    </div>
</body>

