@model GroceryShopAPIConsume.Models.BillModel

<div class="card" style="margin-left:240px">
    <div class="card-body">
        <h5 class="card-title">User Form</h5>
        <form method="post" asp-action="Save" asp-controller="Bill">
            <div class="row mb-3">
                <div class="col-sm-10">
                    <input type="hidden" class="form-control" asp-for="BillID">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Bill Number</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="BillNumber">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Order ID</label>
                <div class="col-sm-10">
                    <select asp-for="OrderID" class="form-select" aria-label="Default select example">
                        <option selected class="form-control">Open this select menu</option>
                        @foreach (var order in ViewBag.orderList)
                        {
                            <option value="@order.OrderID">@order.OrderInfo</option>
                        }
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Customer ID</label>
                <div class="col-sm-10">
                    <select asp-for="CustomerID" class="form-select" aria-label="Default select example">
                        <option selected class="form-control">Open this select menu</option>
                        @foreach (var customer in ViewBag.customerList)
                        {
                            <option value="@customer.CustomerID">@customer.CustomerName</option>
                        }
                    </select>
                </div>
            </div>
           
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Total Amount</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="TotalAmount">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Discount</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Discount">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Net Amount</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="NetAmount">
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                @* <button type="reset" class="btn btn-secondary">Reset</button> *@
            </div>
        </form>
    </div>
</div>
