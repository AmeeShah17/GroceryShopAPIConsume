@model CustomerModel
@{
    Layout = "_UserLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Poppins', sans-serif;
        }

        .profile-container {
            max-width: 800px;
            background: #fff;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            margin: 50px auto;
        }

        .section-title {
            font-weight: bold;
            color: #333;
            margin-bottom: 15px;
            border-bottom: 2px solid #7571F9;
            padding-bottom: 5px;
        }

        .edit-btn {
            text-decoration: none;
            font-size: 16px;
            font-weight: bold;
        }

            .edit-btn:hover {
                text-decoration: underline;
            }

        .info-box {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .row div {
            margin-bottom: 10px;
        }

        .update-btn {
            width: 100%;
            background: #7571F9;
            color: #fff;
            padding: 12px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .update-btn:hover {
                background: #7571F9;
            }
    </style>
</head>
<body>
    <div class="profile-container">
        <h5 class="section-title">My Profile</h5>

        <div class="info-box">
            <h6 class="section-title">Personal Information </h6>
            <div class="row">
                <div class="col-md-6"><strong>Full Name:</strong> @Model.CustomerName</div>
            </div>
            <div class="row">
                <div class="col-md-6"><strong>Email:</strong> @Model.Email </div>
                <div class="col-md-6"><strong>Password:</strong> @Model.Password</div>
            </div>
            <div class="row">
                <div class="col-12"><strong>Bio:</strong> Admin, Team Manager</div>
            </div>
        </div>

        <div class="info-box">
            <h6 class="section-title">Address </h6>
            <div class="row">
                <div class="col-md-6"><strong>Country:</strong> India</div>
                <div class="col-md-6"><strong>City/State:</strong> Gujarat</div>
            </div>
            <div class="row">
                <div class="col-md-6"><strong>Pin Code:</strong>@Model.PinCode</div>
                <div class="col-md-6"><strong>Address:</strong> @Model.Address</div>
            </div>
        </div>

        <button class="update-btn">Update Profile</button>
    </div>
</body>
</html>
