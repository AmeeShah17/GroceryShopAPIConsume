@model GroceryShopAPIConsume.Models.UserModel
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .profile-card {
            background: white;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .profile-header {
            font-size: 24px;
            font-weight: bold;
            color: #343a40;
            text-align: center;
            margin-bottom: 20px;
        }

        .profile-info {
            font-size: 18px;
            color: #495057;
        }

            .profile-info span {
                font-weight: bold;
                color: #212529;
            }

        .btn-edit {
            background-color: #007bff;
            color: white;
            border-radius: 5px;
            padding: 10px 20px;
            font-size: 16px;
            display: block;
            width: 100%;
            text-align: center;
        }

            .btn-edit:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="profile-card">
                    <div class="profile-header">User Profile</div>
                    <hr>
                    <div class="profile-info">
                        <p><span>Name:</span>@Model.UserName</p>
                        <p><span>Email:</span>@Model.Email</p>
                        <p><span>Phone:</span>@Model.Password</p>
                       
                    </div>
                    <hr>
                    <a href="#" class="btn btn-edit">Edit Profile</a>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

