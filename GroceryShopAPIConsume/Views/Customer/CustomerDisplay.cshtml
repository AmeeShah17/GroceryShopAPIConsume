@model IEnumerable<GroceryShopAPIConsume.Models.CustomerModel>
<h3 style="margin-left:270px">Category Table</h3>
<a asp-controller="Customer" asp-action="AddCustomer">
    <button style="margin-left:270px;margin-bottom:10px;" class="btn btn-primary">Add Data</button>
</a>
<!-- Table with stripped rows -->
<table class="table table-hover table-bordered table-responsive" style="width:80%;margin-left:270px">
    <thead>
        <tr>
            <th scope="col">Customer ID</th>
            <th scope="col">Customer Name</th>
            <th scope="col">Email</th>
            <th scope="col">Password</th>
            <th scope="col">City</th>
            <th scope="col">Phone no.</th>
            <th scope="col">Address</th>
            <th scope="col">PinCode</th>
            <th scope="col">Is Active</th>
            <th scope="col">Created</th>
            <th scope="col">Modified</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var items in Model)
        {
            <tr>
                <td>@items.CustomerID</td>
                <td>@items.CustomerName</td>
                <td>@items.Email</td>
                <td>@items.Password</td>
                <td>@items.City</td>
                <td>@items.MobileNo</td>
                <td>@items.Address</td>
                <td>@items.PinCode</td>
                <td>@items.IsActive</td>
                <td>@items.Created</td>
                <td>@items.Modified</td>

                <td>
                    <a href="@Url.Action("AddCustomer","Customer",new {CustomerID=items.CustomerID})">
                    <button class="btn btn-success"><i class="bi bi-pencil"></i></button>
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("Delete","Customer",new {CustomerID=items.CustomerID})">
                    <button class="btn btn-danger"><i class="bi bi-trash"></i></button>
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>
<!-- End Table with stripped rows -->
