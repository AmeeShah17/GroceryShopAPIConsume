@model IEnumerable<GroceryShopAPIConsume.Models.CustomerModel>


<head>
        <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .table-container {
            padding: 20px;
        }

        .table thead {
            background-color: #f1f1f1;
        }

        .badge {
            font-size: 14px;
            padding: 5px 10px;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="container table-container">
        <h3 style="margin-left:130px">Customer Table</h3>
        <a asp-controller="Customer" asp-action="AddCustomer">
            <button style="margin-left:130px;margin-bottom:10px;" class="btn btn-primary">Add Data</button>
        </a>
        <table class="table table-hover align-middle table-bordered table-responsive" style="margin-left:120px;width:100%">
            <thead>
                <tr>
                    <th>Customer ID</th>
                    <th>Customer Name</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>City</th>
                    <th>Is Active</th>
                    <th>Phone no.</th>
                    <th>Address</th>
                    <th>PinCode</th>
                    
                    <th>Created</th>
                    <th>Modified</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var items in Model)
                {
                    <tr>
                        <td>@items.CustomerID</td>
                        <td>@items.CustomerName</td>
                        <td>@items.Email</td>
                        <td>@items.Password</td>
                        <td>@items.City</td>
                        <td>
                            <span class="badge @(items.IsActive ? "bg-success" : "bg-danger")">
                                @(items.IsActive ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td>@items.MobileNo</td>
                        <td>@items.Address</td>
                        <td>@items.PinCode</td>
                        
                        <td>@items.Created</td>
                        <td>@items.Modified</td>
                        <td>
                            <a href="@Url.Action("AddCustomer","Customer",new {CustomerID=items.CustomerID})">
                                <button class="btn btn-primary"><i class="bi bi-pencil"></i></button>
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("Delete","Customer",new {CustomerID=items.CustomerID})">
                                <button class="btn btn-danger"><i class="bi bi-trash"></i></button>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>

