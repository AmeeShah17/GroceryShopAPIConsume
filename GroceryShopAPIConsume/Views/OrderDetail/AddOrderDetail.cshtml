@model GroceryShopAPIConsume.Models.OrderDetailModel

<head>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .form-container {
            margin-top: 30px;
            margin-left: 180px;
            margin-bottom: 30px;
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .form-container h5 {
                background: #007bff;
                color: white;
                padding: 10px;
                border-radius: 5px;
                text-align: center;
                margin-bottom: 20px;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h5>Order Detail Form</h5>

        <form method="post" asp-action="Save" asp-controller="OrderDetail">
            <div class="row mb-3">
                <div class="col-sm-10">
                    <input type="hidden" class="form-control" asp-for="OrderDetailID">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Order ID</label>
                <div class="col-sm-10">
                    <select asp-for="OrderID" class="form-select" aria-label="Default select example">
                        <option selected class="form-control">Open this select menu</option>
                        @foreach (var order in ViewBag.orderList)
                        {
                            <option value="@order.OrderID">@order.OrderInfo</option>
                        }
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Customer ID</label>
                <div class="col-sm-10">
                    <select asp-for="CustomerID" class="form-select" aria-label="Default select example">
                        <option selected class="form-control">Open this select menu</option>
                        @foreach (var customer in ViewBag.customerList)
                        {
                            <option value="@customer.CustomerID">@customer.CustomerName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Quantity</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Quantity">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Amount</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Amount">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Total Amount</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="TotalAmount">
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                @* <button type="reset" class="btn btn-secondary">Reset</button> *@
            </div>
        </form>
    </div>
</div>
</body>