@model IEnumerable<GroceryShopAPIConsume.Models.OrderDetailModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Styled Table</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .table-container {
            padding: 20px;
        }

        .table thead {
            background-color: #f1f1f1;
        }

        .badge {
            font-size: 14px;
            padding: 5px 10px;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="container table-container">
        <h3 style="margin-left:130px">Order Detail Table</h3>
        <a asp-controller="OrderDetail" asp-action="AddOrderDetail">
            <button style="margin-left:130px;margin-bottom:10px;" class="btn btn-primary">Add Data</button>
        </a>
        <table class="table table-hover align-middle table-bordered" style="margin-left:120px">
            <thead>
                <tr>
                    <th>OrderDetail ID</th>
                    <th>Order ID</th>
                    <th>Order Date</th>
                    <th>Customer ID</th>
                    <th>Customer Name</th>
                    <th>Quantity</th>
                    <th>Amount</th>
                    <th>Total Amount</th>
                    <th>Created</th>
                    <th>Modified</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var items in Model)
                {
                    <tr>
                        <td>@items.OrderDetailID</td>
                        <td>@items.OrderID</td>
                        <td>@items.OrderDate</td>
                        <td>@items.CustomerID</td>
                        <td>@items.CustomerName</td>
                        <td>@items.Quantity</td>
                        <td>@items.Amount</td>
                        <td>@items.TotalAmount</td>
                        <td>@items.Created</td>
                        <td>@items.Modified</td>
                        <td>
                            <a href="@Url.Action("AddOrderDetail","OrderDetail", new { OrderDetailID = items.OrderDetailID })">
                                <button class="btn btn-primary"><i class="bi bi-pencil"></i></button>
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("Delete","OrderDetail", new { OrderDetailID = items.OrderDetailID })">
                                <button class="btn btn-danger"><i class="bi bi-trash"></i></button>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
