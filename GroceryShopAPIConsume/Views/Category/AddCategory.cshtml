@model GroceryShopAPIConsume.Models.CategoryModel

<div class="card" style="margin-left:200px">
    <div class="card-body">
        <h5 class="card-title">Category Form</h5>
        <form method="post" asp-action="Save" asp-controller="Category">
            <div class="row mb-3">
                <div class="col-sm-10">
                    <input type="hidden" class="form-control" asp-for="CateoryID">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Category Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control"asp-for="CategoryName">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Category Image URL</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="CategoryImage">
                </div>
            </div>
            
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                @* <button type="reset" class="btn btn-secondary">Reset</button> *@
            </div>
        </form>
        </div>
        </div>
