@model GroceryShopAPIConsume.Models.ProductModel

<head>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .form-container {
            margin-top: 30px;
            margin-left: 180px;
            margin-bottom: 30px;
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .form-container h5 {
                background: #007bff;
                color: white;
                padding: 10px;
                border-radius: 5px;
                text-align: center;
                margin-bottom: 20px;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h5>Product Form</h5>

            <form method="post" asp-action="Save" asp-controller="Product">
                <input type="hidden" class="form-control" asp-for="ProductID">

                <div class="mb-3">
                    <label class="col-form-label">Product Name</label>
                    <input type="text" class="form-control" asp-for="ProductName">
                </div>

                <div class="mb-3">
                    <label class="col-form-label">Product Image URL</label>
                    <input type="text" class="form-control" asp-for="ProductImage">
                </div>

                <div class="mb-3">
                    <label class="col-form-label">Product Price</label>
                    <input type="text" class="form-control" asp-for="ProductPrice">
                </div>

                <div class="mb-3">
                    <label class="col-form-label">Product Code</label>
                    <input type="text" class="form-control" asp-for="ProductCode">
                </div>

                <div class="mb-3">
                    <label class="col-form-label">Description</label>
                    <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                </div>

                <div class="mb-3">
                    <label class="col-form-label">SubCategory Name</label>
                    <select asp-for="SubCategoryID" class="form-select">
                        <option selected>Open this select menu</option>
                        @foreach (var subcategory in ViewBag.subcategoryList)
                        {
                            <option value="@subcategory.SubCategoryID">@subcategory.SubCategoryName</option>
                        }
                    </select>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</body>
